<Window x:Class="JoyPro.PlanesToExport"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JoyPro"
        mc:Ignorable="d"
        Title="Select Planes to Export"  Height="250" Width="640" Background="#FF191919">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Button FontWeight="Bold" Name="CancelBtn" Content="Cancel" Height="30" Width="250"  Background="#FFC9C9C9" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="9,13,0,0" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="1" />
        <Button FontWeight="Bold" Name="ExportBtn" Content="Export" Height="30" Width="250"  Background="#FFC9C9C9" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,13,9,0" Grid.Row="2" Grid.ColumnSpan="1" />
        <Label Content="Planes to Export:" Foreground="White" Grid.Column="0" Grid.Row="0"  HorizontalAlignment="Left" VerticalAlignment="Center" Height="26" Margin="0,0,0,0" Width="180"/>
        <ListBox Name="GamePlaneBox" Grid.Row="1" Grid.Column="0" />
    </Grid>
</Window>
