<Window x:Class="JoyPro.StickMention"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JoyPro"
        mc:Ignorable="d"
        Title="Stick Mention" Height="450" Width="800">
    <Grid Background="#FF191919">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        <Button FontWeight="Bold" Name="CloseBtn" Content="Close" Height="30" Width="120"  Background="#FFC9C9C9" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="000,0,10,0" Grid.Row="4" Grid.Column="0" />
        <Label Content="Stick and their mentions:" Foreground="White" Grid.Column="0" Grid.Row="0"  HorizontalAlignment="Left" VerticalAlignment="Center" Height="26" Margin="10,0,0,5" />
        <ScrollViewer Name="sv" ScrollViewer.HorizontalScrollBarVisibility="Auto"  Width="auto" Grid.Row="1" Grid.Column="0" />
        <CheckBox Name="deleteFilesCB" Content="Delete files from local file system as well" Grid.Row="2" Grid.Column="0" Foreground="White" HorizontalAlignment="Left" Margin="10,0,0,5" VerticalAlignment="Center"/>
    </Grid>
</Window>
