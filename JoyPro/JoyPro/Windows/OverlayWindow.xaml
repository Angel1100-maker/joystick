<Window x:Class="JoyPro.OverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JoyPro"
        mc:Ignorable="d"
        Title="JoyPro Overlay" Height="1080" Width="800"
        AllowsTransparency="True" WindowStyle="None">
    <Window.Background>
        <SolidColorBrush Opacity="0.0" Color="White"/>
    </Window.Background>
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <ScrollViewer Name="sv" ScrollViewer.HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden" Grid.RowSpan="1" Grid.Row="1"/>
        <Label Name="ClosingLabel" Content="X" Foreground="OrangeRed" Grid.Row="0" HorizontalAlignment="Left" FontSize="30"/>
        <Label Name="MoveLabel" Content="☻" Foreground="White" Grid.Row="0" HorizontalAlignment="Left" FontSize="30" Margin="30,0,0,0"/>
    </Grid>
</Window>
